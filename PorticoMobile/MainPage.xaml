<Page
    x:Class="PorticoMobile.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#199390">

   <Page.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Resources/PorticoMobileResources.xaml" />
         </ResourceDictionary.MergedDictionaries>
         
         <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="/Assets/Fonts/Roboto-Regular.ttf#Roboto" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,-20,0,0" />
         </Style>
      </ResourceDictionary>
   </Page.Resources>
    
   <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      
      <Image Grid.Row="0" Source="Images/portico logo.png" Height="200" />
      <TextBlock Grid.Row="1" Text="A Shorter Distance to Patient Care" />
   </Grid>
   
</Page>
